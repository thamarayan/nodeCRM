<%- include('partials/header.ejs') %>


<div id="section">
    <div class="row">
        <div class="container-fluid cf-loginPage">
            <div class="col-md-3"></div>
            <div class="col-md-5 justify-content-center m-auto">
                <form method="post" action="/login">
                    <h3 class="formHead">ADMIN LOGIN</h3>
                    <% if (message !== null) { %>
                        <span style="background-color: red !important; color: white !important; padding: 1px !important;"><%=message%></span>
                    <% } %>
                    
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput" name="username" placeholder="name@example.com" required>
                        <label for="floatingInput">Email address</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
                        <label for="floatingPassword">Password</label>
                      </div>
                    <button type="submit" class="btn btn-primary mb-3">Submit</button>
                    <p>New User ? <a href="/signup" style="text-decoration: none !important; color: blue; ">Sign up</a></p>
                  </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>















